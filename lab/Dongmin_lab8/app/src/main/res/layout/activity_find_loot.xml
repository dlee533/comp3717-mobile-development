<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindLootActivity">

    <ImageButton
        android:id="@+id/imageButton_loot_1"
        android:layout_width="116dp"
        android:layout_height="104dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageButton_loot_3"
        app:layout_constraintHorizontal_bias="0.098"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498"
        app:srcCompat="@drawable/loot_loot_x" />

    <ImageButton
        android:id="@+id/imageButton_loot_2"
        android:layout_width="116dp"
        android:layout_height="104dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageButton_loot_3"
        app:layout_constraintStart_toEndOf="@+id/imageButton_loot_1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/loot_loot_x" />

    <ImageButton
        android:id="@+id/imageButton_loot_3"
        android:layout_width="116dp"
        android:layout_height="104dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498"
        app:srcCompat="@drawable/loot_loot_x" />

    <Button
        android:id="@+id/button_loot_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loot_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_loot_2" />

    <TextView
        android:id="@+id/textView_loot_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loot_receive"
        app:layout_constraintBottom_toTopOf="@+id/imageButton_loot_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>